# -- While loop ----------------------- #

i = 0;

while i < 3:
	{
		print('Hello from the while loop!\n');
		i = i + 1;
	}

# ------------------------------------- #
# -- Do-Wile loop --------------------- #

i = 0;

do
	{
		print('Hello from the do-while loop!\n');
		i = i + 1;
	}
while i < 3;


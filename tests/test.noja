
# Test the equal operator
{
	assert(1 == 1);
	assert(1.0 == 1.0);
	assert('--' == '--');
}

# Test assignment.
{
	a = 3;
	assert(a == 3);
}

# Test operations on integers.
{
	# assert(4 == +4); -------------------- FAILING
	# assert(0-4 == -4); ------------------ FAILING
	assert(1 + 1 == 2);
	assert(2 * 3 == 6);
	assert(6 / 3 == 2);
	assert(4 < 5);
	assert(4 > 3);
	assert(4 <= 5);
	assert(4 <= 4);
	assert(4 >= 3);
	assert(4 == 4);
	assert(4 != 3);
}

# Test operations on floats.
{
	# assert(4.0 == +4.0); # -------------------- FAILING
	# assert(0-4.0 == -4.0); # ------------------ FAILING
	assert(1.0 + 1.0 == 2.0);
	assert(2.0 * 3.0 == 6.0);
	assert(6.0 / 3.0 == 2.0);
	assert(4.0 < 5.0);
	assert(4.0 > 3.0);
	assert(4.0 <= 5.0);
	assert(4.0 <= 4.0);
	assert(4.0 >= 3.0);
	assert(4.0 == 4.0);
	assert(4.0 != 3.0);
}

print('No assertion failed.\n');